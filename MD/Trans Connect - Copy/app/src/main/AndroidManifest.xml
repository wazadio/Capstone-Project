<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.transconnect">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TransConnect">
        <activity android:name=".payment.PaymentTicketActivity"></activity>
        <activity android:name=".detail.DetailActivity" />
        <activity android:name=".feedback.FeedbackActivity" />
        <activity android:name=".register.ChangePasswordActivity" />
        <activity android:name=".register.ProfileActivity" />
        <activity android:name=".register.ResetPasswordActivity" />
        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/Theme.TransConnect">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".HomeActivity" />
        <activity android:name=".register.RegisterActivity" />
        <activity android:name=".register.LoginActivity" />
    </application>

</manifest>